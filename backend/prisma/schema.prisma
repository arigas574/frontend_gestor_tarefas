generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"

  url      = "postgresql://postgres:desafio3@localhost:5432/gestor_tarefas?schema=public"
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  activities Activity[]
}

model Activity {
  id        String   @id @default(uuid())
  name      String
  startDate DateTime
  endDate   DateTime
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}